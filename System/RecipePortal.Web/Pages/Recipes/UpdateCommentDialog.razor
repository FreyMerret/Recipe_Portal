@inherits MudComponentBase

@attribute [Authorize]

<MudDialog>
   <TitleContent>
        <MudText Typo="Typo.h6">Изменение комментария</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@comment.CommentText" Label="Server ID" MaxLength="115" Lines="3"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    MudForm form = default!;

    [Parameter]
    public CommentListItem comment { get; set; } = new CommentListItem();

    protected override async Task OnInitializedAsync()
    {

    }

    async Task Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();
}